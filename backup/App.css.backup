.protocol-icon {
  font-size: var(--font-size-xl);
  background: var(--bg-tertiary);
  padding: var(--spacing-sm);
  border-radius: var(--border-radius);
  border: 1px solid var(--border-color);
}

.server-name {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  margin: 0;
  color: var(--text-primary);
  letter-spacing: var(--letter-spacing-tight);
}

.status-indicator {
  width: 12px;
  height: 12px;
  border-radius: var(--radius-full);
  margin-left: auto;
  transition: var(--transition-fast);
  box-shadow: 0 0 6px currentColor;
}

.server-details {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.server-address,
.server-user {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: var(--font-size-sm);
}

.address-icon,
.user-icon {
  width: 16px;
  text-align: center;
}

.address-text,
.user-text {
  color: var(--text-secondary);
  font-family: var(--font-family-mono);
}

.server-actions {
  display: flex;
  gap: var(--spacing-sm);
  opacity: 0;
  transition: var(--transition-fast);
}

.server-item:hover .server-actions {
  opacity: 1;
}

.action-btn {
  background: var(--bg-tertiary);
  border: 1px solid var(--border-color);
  color: var(--text-secondary);
  padding: var(--spacing-sm);
  border-radius: var(--border-radius);
  cursor: pointer;
  font-size: var(--font-size-base);
  transition: var(--transition-fast);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:hover {
  background: var(--color-secondary-hover);
  color: var(--text-primary);
  transform: scale(1.1);
}

.action-btn:focus-visible {
  outline: var(--focus-outline);
  box-shadow: var(--focus-ring);
}

.edit-btn:hover {
  background: var(--info-color);
  color: var(--color-btn-primary-text);
}

.delete-btn:hover {
  background: var(--error-color);
  color: var(--color-btn-primary-text);
}

.connection-status {
  background: var(--bg-dark);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-top: var(--spacing-md);
  border-left: 4px solid transparent;
  animation: slideDown var(--transition-normal);
}

.status-message {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: var(--font-size-sm);
}

.status-message.connecting {
  color: var(--connecting-color);
  border-left-color: var(--connecting-color);
}

.status-message.success {
  color: var(--success-color);
  border-left-color: var(--success-color);
}

.status-message.error {
  color: var(--error-color);
  border-left-color: var(--error-color);
}

.status-icon {
  font-size: var(--font-size-lg);
}

.server-tooltip {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--bg-dark);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  z-index: var(--z-tooltip);
  opacity: 0;
  transform: translateY(-10px);
  transition: var(--transition-normal);
  pointer-events: none;
}

.server-item:hover .server-tooltip {
  opacity: 1;
  transform: translateY(0);
}

.tooltip-content {
  display: grid;
  gap: var(--spacing-xs);
}

.tooltip-row {
  display: flex;
  justify-content: space-between;
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(var(--color-slate-900-rgb), 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--border-radius-lg);
  z-index: var(--z-fixed);
}

.loading-overlay .loading-spinner {
  color: var(--primary-color);
}

/* Formulário de Edição do Server */
.server-edit-form {
  background: var(--bg-dark);
  border-radius: var(--border-radius);
  padding: var(--spacing-lg);
  border: 1px solid var(--border-color);
}

.edit-header h4 {
  margin: 0 0 var(--spacing-lg) 0;
  color: var(--info-color);
  text-align: center;
  font-weight: var(--font-weight-semibold);
}

.edit-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.edit-field {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.edit-field label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--space-8);
}

.edit-field input,
.edit-field select {
  padding: var(--spacing-sm);
  border-radius: var(--border-radius);
  border: 1px solid var(--border-color);
  background: var(--color-surface);
  color: var(--text-primary);
  font-size: var(--font-size-sm);
  font-family: var(--font-family);
  transition: var(--transition-fast);
}

.edit-field input:focus,
.edit-field select:focus {
  outline: var(--focus-outline);
  border-color: var(--primary-color);
  box-shadow: var(--focus-ring);
}

.edit-field input.error {
  border-color: var(--error-color);
}

.error-text {
  color: var(--error-color);
  font-size: var(--font-size-xs);
}

.protocol-selection {
  display: flex;
  gap: var(--spacing-md);
}

.protocol-selection label {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  cursor: pointer;
  color: var(--text-primary);
}

.password-input-container {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input-container input {
  flex: 1;
  padding-right: 40px;
}

.password-toggle {
  position: absolute;
  right: var(--spacing-sm);
  background: none;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  font-size: var(--font-size-base);
  padding: var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  transition: var(--transition-fast);
}

.password-toggle:hover {
  background: var(--color-secondary);
  color: var(--text-primary);
}

.password-toggle:focus-visible {
  outline: var(--focus-outline);
}

.edit-actions {
  display: flex;
  gap: var(--spacing-md);
  justify-content: flex-end;
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--border-color);
}

.btn-save {
  background: var(--primary-color);
  color: var(--color-btn-primary-text);
  border: none;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--border-radius);
  cursor: pointer;
  font-weight: var(--font-weight-semibold);
  font-family: var(--font-family);
  transition: var(--transition-fast);
}

.btn-save:hover {
  background: var(--primary-hover);
}

.btn-save:focus-visible {
  outline: var(--focus-outline);
  box-shadow: var(--focus-ring);
}

/* ==========================
   DIALOG MELHORADO
   ========================== */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(var(--color-slate-900-rgb), 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: var(--z-modal);
  animation: backdropFadeIn var(--transition-normal);
}

.dialog-box {
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-dark) 100%);
  border-radius: var(--border-radius-lg);
  width: 90%;
  max-width: 500px;
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--color-card-border);
  animation: modalSlideIn var(--transition-normal);
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg) var(--spacing-lg) 0;
}

.dialog-title {
  margin: 0;
  color: var(--warning-color);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
}

.dialog-close {
  background: none;
  border: none;
  color: var(--text-secondary);
  font-size: var(--font-size-2xl);
  cursor: pointer;
  padding: var(--spacing-xs);
  border-radius: var(--border-radius);
  transition: var(--transition-fast);
  line-height: 1;
}

.dialog-close:hover {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.dialog-close:focus-visible {
  outline: var(--focus-outline);
  box-shadow: var(--focus-ring);
}

.dialog-content {
  padding: var(--spacing-lg);
}

.dialog-message {
  font-size: var(--font-size-lg);
  margin: 0;
  line-height: var(--line-height-normal);
  color: var(--text-primary);
}

.dialog-buttons {
  display: flex;
  gap: var(--spacing-md);
  justify-content: flex-end;
  padding: 0 var(--spacing-lg) var(--spacing-lg);
}

.dialog-button {
  padding: var(--spacing-md) var(--spacing-lg);
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  font-family: var(--font-family);
  transition: var(--transition-fast);
  min-width: 100px;
}

.dialog-button:focus-visible {
  outline: var(--focus-outline);
  box-shadow: var(--focus-ring);
}

.dialog-button.cancel {
  background: var(--color-secondary);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.dialog-button.cancel:hover {
  background: var(--color-secondary-hover);
}

.dialog-button.confirm {
  background: var(--primary-color);
  color: var(--color-btn-primary-text);
}

.dialog-button.confirm:hover {
  background: var(--primary-hover);
  transform: translateY(-2px);
}

.dialog-hint {
  text-align: center;
  padding: 0 var(--spacing-lg) var(--spacing-md);
  color: var(--text-muted);
  font-size: var(--font-size-xs);
  font-style: italic;
}

/* ==========================
   GRUPOS E LAYOUT EXISTENTE
   ========================== */
.group-container {
  margin-bottom: var(--spacing-xxl);
  background: var(--bg-secondary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  border: 1px solid var(--color-card-border);
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-md);
  border-bottom: 1px solid var(--color-card-border-inner);
}

.group-title {
  font-size: var(--font-size-2xl);
  margin: 0;
  color: var(--text-primary);
  font-weight: var(--font-weight-semibold);
  letter-spacing: var(--letter-spacing-tight);
}

.add-group-form {
  margin-bottom: var(--spacing-xl);
  display: flex;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: var(--bg-secondary);
  border-radius: var(--border-radius);
  border: 1px solid var(--color-card-border);
}

.add-group-form input {
  flex-grow: 1;
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  border: 1px solid var(--border-color);
  background-color: var(--color-surface);
  color: var(--text-primary);
  font-size: var(--font-size-base);
  font-family: var(--font-family);
  transition: var(--transition-fast);
}

.add-group-form input:focus {
  outline: var(--focus-outline);
  border-color: var(--primary-color);
  box-shadow: var(--focus-ring);
}

.add-group-form button {
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--primary-color);
  color: var(--color-btn-primary-text);
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  font-family: var(--font-family);
  transition: var(--transition-fast);
}

.add-group-form button:hover {
  background-color: var(--primary-hover);
  transform: translateY(-2px);
}

.add-group-form button:focus-visible {
  outline: var(--focus-outline);
  box-shadow: var(--focus-ring);
}

/* ==========================
   ANIMAÇÕES
   ========================== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes backdropFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes modalSlideIn {
  from { 
    opacity: 0; 
    transform: translateY(-50px) scale(0.95); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0) scale(1); 
  }
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

@keyframes glow {
  0%, 100% { box-shadow: 0 0 5px currentColor; }
  50% { box-shadow: 0 0 20px currentColor; }
}

/* ==========================
   RESPONSIVIDADE - DESIGN SYSTEM COMPLIANT
   ========================== */
@media (max-width: 768px) {
  body {
    padding: var(--spacing-md);
  }
  
  .toolbar {
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: stretch;
  }
  
  .toolbar-actions {
    margin-left: 0;
    align-self: center;
  }
  
  .stats-bar {
    justify-content: center;
    gap: var(--spacing-md);
  }
  
  .form-actions,
  .dialog-buttons {
    flex-direction: column;
  }
  
  .edit-grid {
    grid-template-columns: 1fr;
  }
  
  .protocol-selector {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .server-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-md);
  }
  
  .server-actions {
    opacity: 1;
    align-self: flex-end;
  }
}

/* Mobile portrait breakpoint as requested */
@media (max-width: 480px) {
  body {
    padding: var(--space-12);
  }

  .app {
    max-width: 100%;
  }
  
  .app-header {
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }
  
  .header-content h1 {
    font-size: var(--font-size-2xl);
  }

  .stats-bar {
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .stat-item {
    text-align: center;
    padding: var(--spacing-sm);
  }
  
  .toolbar {
    padding: var(--spacing-md);
  }

  .search-container {
    max-width: 100%;
  }

  .search-input {
    font-size: var(--font-size-base);
    padding: var(--space-12);
  }
  
  .dialog-box {
    margin: var(--spacing-md);
    width: calc(100% - 2 * var(--spacing-md));
  }

  .dialog-buttons {
    flex-direction: column;
  }

  .dialog-button {
    width: 100%;
  }
  
  .form-tips {
    padding: var(--spacing-md);
  }
  
  .server-item {
    padding: var(--spacing-md);
  }

  .server-title {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-sm);
  }

  .server-name {
    font-size: var(--font-size-lg);
  }

  .add-server-form-container {
    padding: var(--spacing-lg);
  }

  .form-header h3 {
    font-size: var(--font-size-lg);
  }

  .add-group-form {
    flex-direction: column;
    padding: var(--spacing-md);
  }

  .add-group-form input,
  .add-group-form button {
    width: 100%;
  }

  .form-actions {
    flex-direction: column;
  }

  .btn-cancel,
  .btn-submit {
    width: 100%;
    text-align: center;
  }

  .edit-actions {
    flex-direction: column;
  }

  .btn-save {
    width: 100%;
  }
}

/* ==========================
   UTILITÁRIOS
   ========================== */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mb-0 { margin-bottom: 0; }
.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }

.p-0 { padding: 0; }
.p-sm { padding: var(--spacing-sm); }
.p-md { padding: var(--spacing-md); }
.p-lg { padding: var(--spacing-lg); }

/* ==========================
   MODO ALTO CONTRASTE
   ========================== */
@media (prefers-contrast: high) {
  :root {
    --border-color: var(--color-text);
    --text-secondary: rgba(var(--color-gray-200-rgb), 0.9);
    --bg-secondary: var(--color-black);
  }
  
  .form-input:focus,
  .search-input:focus {
    box-shadow: 0 0 0 4px rgba(var(--color-text-rgb), 0.5);
  }
}

/* ==========================
   MODO MOVIMENTO REDUZIDO
   ========================== */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
  
  .spinner {
    animation: none;
  }
}